<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">Public</h2>
                    <p>Repositories</p>
                </div>

                @if (User != null)
                {
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-block btn-primary text-white mb-3" href="/Repositories/Create">Create a repository</a>
                    </div>
                }

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Owner</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Commits Count</th>
                                @if (User != null)
                                {
                                    <th scope="col">Commit</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var repo in Model)
                            {
                                <tr class="table-light">
                                    <th scope="row">@repo.Name</th>
                                    <td>@repo.Owner</td>
                                    <td>@repo.CreatedOn</td>
                                    <td>@repo.CommitsCount</td>
                                    @if (User != null)
                                    {
                                        <td>
                                            <a class="btn btn-block btn-primary text-white mb-3" href="/Commits/Create?id=@repo.Id">Commit</a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>