{{> header}}

<div class="container details">
  <div class="details-content">
    <h2>{{title}}</h2>
    <strong>{{category}}</strong>
    <p>{{content}}</p>
    <div class="buttons">
      {{#if canZ}}
      <a href="#/x/delete/{{id}}" class="btn delete">Delete</a>
      <a href="#/x/details/edit/{{id}}" class="btn edit">Edit</a>
      {{else}}
      <a href="#/home" class="btn edit">Back</a>
      {{/if}}
    </div>
  </div>
</div>

{{> footer}}