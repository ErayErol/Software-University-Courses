        {{/if}}
      </article>
      {{else}}
      <h3 class="no-articles">No articles yet</h3>
      {{/each}}
    </div>
  </section>
  <section class="Java">
    <h2>Java</h2>
    <div class="articles">
      {{#each Java}}
      <article>
        {{#if haveArticle}}
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <a href="#/x/details/{{id}}" class="btn details-btn">Details</a>
        {{/if}}
      </article>
      {{else}}
      <h3 class="no-articles">No articles yet</h3>
      {{/each}}
    </div>
  </section>
