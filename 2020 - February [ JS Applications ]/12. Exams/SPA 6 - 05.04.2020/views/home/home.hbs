      {{#each Pyton}}
      <article>
        {{#if haveArticle}}
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <a href="#/x/details/{{id}}" class="btn details-btn">Details</a>
        {{/if}}
      </article>
      {{else}}
