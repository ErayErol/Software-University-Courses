{{> header}}

{{#if isLoggedIn}}
<div class="content">
  <section class="js">
    <h2>JavaScript</h2>
    <div class="articles">
      {{#each JavaScript}}
      <article>
        {{#if haveArticle}}
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <a href="#/x/details/{{id}}" class="btn details-btn">Details</a>
        {{/if}}
      </article>
      {{else}}
      <h3 class="no-articles">No articles yet</h3>
      {{/each}}
    </div>
  </section>
  <section class="CSharp">
    <h2>C#</h2>
    <div class="articles">
      {{#each CSharp}}
      <article>
        {{#if haveArticle}}
        <h3>{{title}}</h3>
        <p>{{content}}</p>
